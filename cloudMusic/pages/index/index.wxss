/* 五个图标导航区域 */
.navContainer{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.navItem{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: rgba(240, 19, 19);
  font-size: 50rpx;
  color: white;
  margin: 20rpx 0;
}

.navItem text:nth-child(2){
  font-size: 26rpx;
}

/* 推荐歌曲 */
.recommendContainer{
  padding: 20rpx;
}

/* 推荐内容区 */
.recommendScorll{
  display: flex;
  height: 300rpx; /* enable-flex开启布局的时候，会把全部的高度计算在一起，需要给予高度 */
}

.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}

.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scrollItem text{
  font-size: 26rpx;
  /* 单行文本溢出隐藏 */
  /* text是行内元素需要display: block;转换为块级元素 不然overflow: hidden;会失效 */
  /* display: block; 
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */

  /* 多行文本溢出隐藏 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; /* 设置对齐模式 纵向对齐 */
  -webkit-line-clamp: 2; /* 设置行数为2 */
}

/* 排行榜区域 */
.topList{
  padding: 0 20rpx 20rpx 20rpx;
}

.topListSwiper{
  height: 450rpx;
}

.swiperItem{
  width: 96%;
  background: #fdfbfb;
}

.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
}

.musicItem{
  /* 当一个元素设置为flex，其子元素会自动成为block元素 */
  display: flex;
  margin-bottom: 20rpx;
}

.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
